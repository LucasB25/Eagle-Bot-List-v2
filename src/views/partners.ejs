<%- include('parts/head', {bot, user, path}) %>
<link
  rel="stylesheet"
  type="text/css"
  href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/fonts/simple-line-icons/style.min.css"
/>
<link
  rel="stylesheet"
  type="text/css"
  href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/colors.min.css"
/>
<style>
  .partner-ownerName {
    color: #fff;
    padding: 5px;
  }
  .partner-ownerName:hover {
    color: #ccc;
  }
</style>
<div class="container">
  <br />
  <div class="columns is-multiline is-desktop is-variable mt-3 pt-5">
    <% if(db.has(`partners`) === true) { %> <% db.get(`partners`).map(a => { %>
    <div class="col-md-6 col-lg-4 pb-3">
      <div data-aos="fade-down">
        <div style="border: none" class="card panais-card-custom bg-panais">
          <div
            class="panais-card-custom-img"
            style="
              background-image: url(<%=a.backURL||'../img/undefined_back.webp'%>);
            "
          ></div>
          <div class="panais-card-custom-avatar">
            <img
              class="img-fluid"
              onerror="imgError(this);"
              src="<%=a.icon%>"
              alt="Avatar"
            />
          </div>
          <div class="card-body">
            <div class="is-pulled-right mt-panais mt-1">
              <a
                data-tooltip="Owner"
                data-tooltip-location="left"
                class="badge badge-stats mb-panais mt-1 w-100"
                ><span
                  ><i class="fad fa-user-crown"></i>&nbsp;&nbsp;<%=
                  bot.users.cache.get(a.ownerID) ?
                  bot.users.cache.get(a.ownerID).username : "undefined" %>#<%=
                  bot.users.cache.get(a.ownerID) ?
                  bot.users.cache.get(a.ownerID).discriminator : "0000" %></span
                ></a
              >
            </div>
            <h4 translate="no" class="card-title">
              <%= a.serverName %>
              <span data-tooltip="Verified Server" data-tooltip-location="top"
                ><i class="fad fa-badge-check bodyIcon"></i
              ></span>
            </h4>
            <p translate="no" class="card-text panaisbotDesc">
              <%= a.description %>
            </p>
          </div>
          <div class="card-footer">
            <a href="<%= a.website %>" class="btn btn-panais btn-block"
              ><i class="fal fa-arrow-right"></i>&nbsp;Visit</a
            >
          </div>
        </div>
      </div>
    </div>
    <% }) %> <% } else { %>
    <div class="alert alert-danger" role="alert">
      <span style="color: #fff !important" class="is-size-5"
        ><i class="fad fa-partner"></i>&nbsp;<strong>Oops..</strong></span
      ><br />
      We don't have any partners :(
    </div>
    <% } %>
  </div>
</div>
<%- include('parts/foot') %>
